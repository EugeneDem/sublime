include ../mixins/svg
include ../mixins/scripts

doctype html
html(lang='ru')
	block analitics
		-var connonicalPage = '';
	include ../head/head
	body
		.app.app_navbar-fixed
			.app__content
				// top navbar
				header.navbar.navbar-default.navbar-toggleable-sm
					// navbar-header
					a.navbar-toggler.navbar-toggler-left.js-sidebar-mobile-toggler(href="#" data-toggle-class="app-slide-off" data-toggle-target="#app" data-toggle-click-outside="#navbar-collapse")
						span.navbar-toggler-icon
					.navbar__header
						a.navbar-brand(href="#")
							img(src="assets/images/brand.svg" alt="Sublime by BOSCO")
					// end navbar header
					nav#navbar-collapse.navbar__nav.navbar-collapse(aria-expanded="false" role="navigation" aria-label="first navbar")
						a.navbar__close(href="#")
							span.navbar__close-icon
						.navbar-nav__phone
							a.navbar-nav__phone-link(href="callto:+78005004436") +7 (800) 500-44-36
						ul.navbar-nav
							li.nav-item
								a.nav-link(href="#") Каталог
								.navbar-nav__subnav
									.navbar-nav__subnav-wrap
										.navbar-nav__subnav-container
											.navbar-nav__subnav-listgroup
												each value in submenuCatalog
													.navbar-nav__subnav-listgroup-item(class="navbar-nav__subnav-listgroup-item_col-" + submenuCatalog.length)
														ul.navbar-nav__subnav-list
															li.navbar-nav__subnav-list-item
																a.navbar-nav__subnav-link-title(href=value.link)!= value.title
															if(value.list)
																li.navbar-nav__subnav-list-item
																	each itemList in value.list
																		.navbar-nav__subnav-item
																			a.navbar-nav__subnav-link(href=itemList.link)!= itemList.title
										
							li.nav-item
								a.nav-link(href="#") бренды
								.navbar-nav__subnav
									.navbar-nav__subnav-wrap
										.navbar-nav__subnav-container
											each value in submenuBrands
												.navbar-nav__subnav-listgroup
													.navbar-nav__subnav-listgroup-item(class="navbar-nav__subnav-listgroup-item_col-" + submenuBrands.length)
														ul.navbar-nav__subnav-list
															li.navbar-nav__subnav-list-item
																a.navbar-nav__subnav-link-title(href=value.link)!= value.title
															if(value.list)
																li.navbar-nav__subnav-list-item
																	each itemList, index in value.list
																		if (index % (Math.ceil(value.list.length / 6)) === 0)
																			.navbar-nav__subnav-groupitem
																				- for(var i = index; i <= index+5; i++)
																					.navbar-nav__subnav-item
																						a.navbar-nav__subnav-link(href=value.list[i].link)!= value.list[i].title

							li.nav-item
								a.nav-link(href="#") бутики
								.navbar-nav__subnav
									.navbar-nav__subnav-wrap
										.navbar-nav__subnav-container
											.navbar-nav__subnav-listgroup
												.navbar-nav__subnav-listgroup-item.navbar-nav__subnav-listgroup-item_col-3.navbar-nav__subnav-listgroup-item_col-sm-1
													.navbar-nav__subnav-info Ювелирно-часовые бутики Sublime by&nbsp;BOSCO представлены в&nbsp;ГУМе, ВЕСНЕ на&nbsp;Новом Арбате и&nbsp;в&nbsp;Сочи: на&nbsp;Морвокзале и&nbsp;в&nbsp;Красной Поляне. Приходите, мы&nbsp;всегда вам рады!
												.navbar-nav__subnav-listgroup-item.navbar-nav__subnav-listgroup-item_col-3.navbar-nav__subnav-listgroup-item_col-sm-2
													.navbar-nav__subnav-boutique
														.navbar-nav__subnav-boutique-title Гум
														.navbar-nav__subnav-boutique-text Москва, Красная площадь,&nbsp;3
															span.navbar-nav__subnav-boutique-phone +7 (495) 620-3390
														a.navbar-nav__subnav-boutique-link(href="#") Схема проезда
													.navbar-nav__subnav-boutique
														.navbar-nav__subnav-boutique-title Сочи
														.navbar-nav__subnav-boutique-text Сочи, ул. Войкова,&nbsp;1
															span.navbar-nav__subnav-boutique-phone +7 (8622) 41-8167
														a.navbar-nav__subnav-boutique-link(href="#") Схема проезда
												.navbar-nav__subnav-listgroup-item.navbar-nav__subnav-listgroup-item_col-3.navbar-nav__subnav-listgroup-item_col-sm-2
													.navbar-nav__subnav-boutique
														.navbar-nav__subnav-boutique-title Весна
														.navbar-nav__subnav-boutique-text Москва, Новый Арбат,&nbsp;19
															span.navbar-nav__subnav-boutique-phone +7 (495) 789-9879
														a.navbar-nav__subnav-boutique-link(href="#") Схема проезда
													.navbar-nav__subnav-boutique
														.navbar-nav__subnav-boutique-title Красная Поляна
														.navbar-nav__subnav-boutique-text Сочи, набережная Времена Года,&nbsp;1
															span.navbar-nav__subnav-boutique-phone +7 (862) 241-8159
														a.navbar-nav__subnav-boutique-link(href="#") Схема проезда
					.navbar__form
						.navbar__form-item
							a.navbar__phone(href="callto:+78005004436") +7 (800) 500-44-36
						.navbar__form-item
							.navbar__search.js-search
								i.navbar__search-icon
									+svg('search')
						.navbar__form-item
							a.navbar__wishlist(href="#")
								span.navbar__wishlist-badge 12
								i.navbar__wishlist-icon
									+svg('wishlist')

				// end top navbar
				block content
			footer.app__footer
				.app__footer-inner
					.footer
						.footer__list
							a.footer__brand(href="#")
								img(src="assets/images/brand-footer.svg" alt="Sublime by BOSCO")
							nav.footer__nav
								each value in footerNav
									ul.footer__nav-list
										li.footer__nav-list-item
											a.footer__nav-title(href=value.url)!= value.title
										if(value.list)
											li.footer__nav-list-item
												each itemList in value.list
													.footer__nav-item
														a.footer__nav-link(href=itemList.url)!= itemList.text
						.footer__social
							a.footer__social-link(href="#")
								+svg("social-fb")
							a.footer__social-link(href="#")
								+svg("social-vk")
							a.footer__social-link(href="#")
								+svg("social-tweet")
							a.footer__social-link(href="#")
								+svg("social-pint")
							a.footer__social-link(href="#")
								+svg("social-inst")
		+scripts(['vendor/jquery.js', 'vendor/tether.min.js', 'vendor/bootstrap.min.js', 'vendor/jquery.nicescroll.min.js', 'vendor/slick.js', 'vendor/svg4everybody.js'])
		block scripts
		script(src="assets/js/main.js")
